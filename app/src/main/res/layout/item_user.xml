<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="usersAdapterViewModel"
            type="ru.wheelman.github.viewmodel.UsersFragmentViewModel.UsersAdapterViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avatar"
            imageUrl="@{usersAdapterViewModel.getAvatarUrl(position)}"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="@{usersAdapterViewModel.getUsername(position)}"
            android:textSize="32sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>